{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && bun simple-git-hooks",
    "format:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "lint:commit": "commitlint --edit",
    "lint:nuxt": "eslint --fix",
    "lint:rust": "bun format:rust && cargo clippy --manifest-path src-tauri/Cargo.toml --fix --allow-staged"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.1",
    "radix-vue": "^1.1.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.2",
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@nuxt/devtools": "latest",
    "@unocss/eslint-config": "^0.57.4",
    "@unocss/nuxt": "^0.57.4",
    "eslint": "^8.53.0",
    "lint-staged": "^15.1.0",
    "nuxt": "^3.8.1",
    "simple-git-hooks": "^2.9.0",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged && bun lint:rust",
    "commit-msg": "bun lint:commit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
